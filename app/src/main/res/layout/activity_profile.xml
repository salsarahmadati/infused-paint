<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark">

    <TextView
        android:id="@+id/profile"
        android:layout_width="84dp"
        android:layout_height="29dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="32dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="24dp"
        android:text="@string/profile"
        android:textAppearance="@style/profile"
        android:gravity="top"
        />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="100dp"
        android:src="@tools:sample/avatars"
        app:civ_border_color="#fff"
        android:layout_centerHorizontal="true"
        app:civ_border_width="2dp" />



<TextView
android:id="@+id/frans_benit"
android:layout_width="wrap_content"
android:layout_height="24dp"
    android:layout_centerHorizontal="true"
android:layout_alignParentTop="true"
android:layout_marginTop="230dp"
android:text="@string/frans_benit"
android:textAppearance="@style/profile"
android:gravity="top"
    />

    <TextView
        android:id="@+id/fransbennit"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="260dp"
        android:text="@string/fransbennit"
        android:textAppearance="@style/fransbennit"
        android:gravity="top"
        />

    <!-- Joined At: 09/12/2020 -->
    <TextView
        android:id="@+id/joined_at_0"
        android:layout_width="169dp"
        android:layout_height="20dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="280dp"
        android:text="@string/joined_at_0"
        android:textAppearance="@style/fransbennit"
        android:gravity="top"
        />

    <Button
        android:id="@+id/editprofile_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="310dp"
        android:text="edit profile"
        android:textAppearance="@style/sp16_ffffff_bold"
        android:background="@drawable/editprofile"
        />

    <Button
        android:id="@+id/button_about"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="380dp"
        android:text="About App"
        android:textAppearance="@style/profile"
        android:background="@drawable/buttonabout"
        android:gravity="left|center_vertical"
        android:paddingLeft="20dp"
        />

    <Button
        android:id="@+id/button_sendfeedback"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="460dp"
        android:text="Send Feedback"
        android:textAppearance="@style/profile"
        android:background="@drawable/buttonabout"
        android:gravity="left|center_vertical"
        android:paddingLeft="20dp"
        />

    <Button
        android:id="@+id/button_logout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="540dp"
        android:text="Log Out"
        android:textAppearance="@style/profile"
        android:background="@drawable/buttonabout"
        android:gravity="left|center_vertical"
        android:paddingLeft="20dp"
        />

</RelativeLayout>