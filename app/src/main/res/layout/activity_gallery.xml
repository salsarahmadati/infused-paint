<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark">

    <TextView
        android:id="@+id/your_artwor"
        android:layout_width="257dp"
        android:layout_height="29dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="32dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="24dp"
        android:text="@string/your_artwor"
        android:textAppearance="@style/your_artwor"
        android:gravity="top"
        />

    <ImageView
        android:id="@+id/rectangle_1"
        android:layout_width="97dp"
        android:layout_height="97dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="37dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="77dp"
        android:background="@drawable/gallery_rectangle"
        app:srcCompat="@drawable/picture_1"
        />

    <ImageView
        android:id="@+id/rectangle_2"
        android:layout_width="97dp"
        android:layout_height="97dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="152dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="77dp"
        android:background="@drawable/gallery_rectangle"
        app:srcCompat="@drawable/picture_2"
        />

    <ImageView
        android:id="@+id/rectangle_3"
        android:layout_width="97dp"
        android:layout_height="97dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="267dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="77dp"
        android:background="@drawable/gallery_rectangle"
        app:srcCompat="@drawable/picture_3"
        />

</RelativeLayout>